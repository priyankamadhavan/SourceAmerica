<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trophies">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/trophiesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trophiesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Trophies"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/trophy1"
        android:layout_width="70dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trophy2"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophiesLabel"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/trophy2"
        android:layout_width="63dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trophy3"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophiesLabel"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/trophy3"
        android:layout_width="62dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophiesLabel"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/trophy4"
        android:layout_width="70dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy10Label"
        app:layout_constraintVertical_bias="0.442"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/trophy5"
        android:layout_width="70dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy10Label"
        app:layout_constraintVertical_bias="0.442"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/trophy6"
        android:layout_width="70dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy10Label"
        app:layout_constraintVertical_bias="0.442"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:gravity="center"/>


    <TextView
        android:id="@+id/trophy1Label"
        android:layout_width="94dp"
        android:layout_height="38dp"
        android:text="You reached level 1!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trophy10Label"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy1"
        app:layout_constraintVertical_bias="0.033"
        android:gravity="center"/>

    <TextView
        android:id="@+id/trophy10Label"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:text="You reached level 10!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trophy25Label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/trophy1Label"
        app:layout_constraintTop_toBottomOf="@+id/trophy2"
        app:layout_constraintVertical_bias="0.055"
        android:gravity="center"/>

    <TextView
        android:id="@+id/trophy25Label"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="You reached level 25!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy3"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/trophy50Label"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:text="You reached level 50!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trophy75Label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy4"
        android:gravity="center"/>

    <TextView
        android:id="@+id/trophy75Label"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:text="You reached level 75!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trophy100Label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/trophy50Label"
        app:layout_constraintTop_toBottomOf="@+id/trophy5"
        android:gravity="center"/>

    <TextView
        android:id="@+id/trophy100Label"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:text="You reached level 100!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/trophy75Label"
        app:layout_constraintTop_toBottomOf="@+id/trophy6"
        app:layout_constraintVertical_bias="0.518"
        android:gravity="center"/>


</android.support.constraint.ConstraintLayout>